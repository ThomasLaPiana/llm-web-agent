# Dockerfile for local Mistral service using Ollama
FROM ollama/ollama:latest

# Install curl for healthchecks
USER root
RUN apt-get update && apt-get install -y curl && rm -rf /var/lib/apt/lists/*

# Set environment variables
ENV OLLAMA_HOST=0.0.0.0
ENV OLLAMA_PORT=11434

# Create data directory for models (ollama typically uses /root/.ollama when running as root)
RUN mkdir -p /root/.ollama

# Prepare the models for usage in the container
COPY scripts/init-models.sh /init-models.sh
RUN chmod +x /init-models.sh

# Expose the default Ollama port
EXPOSE 11434

# Start Ollama server
CMD ["serve"] 